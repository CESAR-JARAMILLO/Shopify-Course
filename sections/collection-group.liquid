{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<div class="collection collection1">
  <div class="container">
    <div class="row">
      {%- for product in section.settings.collection.products limit: 6 -%}
        <div class="col-md-4">
          <div class="collection1__collection-item">
            <div class="collection1__product-img collection1__product-img--{{ section.settings.image_fit }}">
              <div class="collection1__heart">
                <i class="far fa-heart"></i>
              </div>
              {%- if product.featured_image != blank -%}
                {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
                  {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
                  {%- capture sizes -%}
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
              {%- endcapture -%}
                {%- else -%}
                  {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                  {%- capture sizes -%}
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
              {%- endcapture -%}
                {%- endif -%}
                {%- assign product_img_class = 'hero1__bg collection1__product-img--'
                  | append: section.settings.image_fit
                -%}

                {{
                  product.images.first
                  | image_url: width: 1500
                  | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: product_img_class
                }}

              {%- else -%}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="collection1__product-info">
              <div class="collection1__product-details">
                <span class="collection1__product-title">{{ product.title }}</span>
                <span class="collection1__product-price">${{ product.price }}</span>
              </div>
              <div class="collection1__colors">
                <div class="collection1__color collection1__color--blue"></div>
                <div class="collection1__color collection1__color--black"></div>
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<div class="hero hero1 hero1--aligned-{{ section.settings.info_align  }} hero1--{{ section.settings.hero_height }}">
  {%- if section.settings.image != blank -%}
    {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
      {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
      {%- capture sizes -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
    (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
  {%- endcapture -%}
    {%- else -%}
      {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
      {%- capture sizes -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
    (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
  {%- endcapture -%}
    {%- endif -%}
    {{
      section.settings.image
      | image_url: width: 1500
      | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'hero1__bg'
    }}
  {%- else -%}
    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}

  <div
    class="hero1__content-container"
    style="background-color: {{ section.settings.background_color |  color_modify: 'alpha', section.settings.opacity }}"
  >
    <div class="hero1__info">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h1 class="hero1__title">{{ block.settings.title }}</h1>
          {%- when 'text' -%}
            <p class="hero1__paragraph">
              {{ block.settings.paragraph }}
            </p>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a href="{{ block.settings.button_link }}" class="hero1__button" {{ block.shopify_attributes }}>
                {{- block.settings.button_label | escape -}}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

{% schema %}
{
  "name": "Collection Group Single",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero Height",
      "options": [
        { "value": "25vh", "label": "25vh" },
        { "value": "50vh", "label": "50vh" },
        { "value": "75vh", "label": "75vh" },
        { "value": "100vh", "label": "100vh" }
      ],
      "default": "100vh"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Featured Collection"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "opacity",
      "label": "Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "select",
      "id": "image_fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ],
      "default": "contain",
      "label": "Product Image Fit"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        }
      ]
    },
    {
      "type": "text",
      "name": "Paragraph",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "Example: I'm baby kogi cardigan kitsch hammock banjo. Typewriter viral man braid hot chicken, farm-to-table fashion axe intelligentsia lomo green juice ramps irony succulents."
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "t:sections.image-with-text.blocks.button.settings.button_label.default",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "t:sections.image-with-text.blocks.button.settings.outline_button.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Group Single",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
